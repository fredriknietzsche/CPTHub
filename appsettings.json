{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=cpthub.db"
  },
  "GoogleLearnLM": {
    "ApiKey": "",
    "BaseUrl": "https://generativelanguage.googleapis.com/v1beta",
    "Model": "models/gemini-1.5-flash-latest",
    "MaxRetries": 3,
    "TimeoutSeconds": 30,
    "RateLimitPerMinute": 60
  },
  "AI": {
    "EnableAIFeatures": true,
    "CacheResponsesLocally": true,
    "MaxCacheSize": 1000,
    "FallbackToOffline": true,
    "ValidateResponses": true
  },
  "Study": {
    "DefaultSessionDuration": 45,
    "ReminderIntervals": [15, 30, 60, 120],
    "DifficultyAdjustmentThreshold": 0.7,
    "SpacedRepetitionMultiplier": 2.5
  },
  "Privacy": {
    "EncryptUserData": true,
    "AnonymizeAIRequests": true,
    "RequireConsentForAI": true,
    "DataRetentionDays": 365
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
